<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/iv_product_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siRadius="10dp" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/cairo"
            android:text="@string/product_name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_product_img"
            app:layout_constraintTop_toTopOf="@id/iv_product_img" />

        <TextView
            android:id="@+id/tv_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha=".5"
            android:text="@string/product_description"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name" />

        <TextView
            android:id="@+id/tv_quantity_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/cairo"
            android:text="@string/quantity"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_product_description"
            app:layout_constraintTop_toBottomOf="@id/tv_product_description" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="3"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_quantity_txt"
            app:layout_constraintStart_toEndOf="@id/tv_quantity_txt"
            app:layout_constraintTop_toTopOf="@id/tv_quantity_txt" />


        <TextView
            android:id="@+id/tv_price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:text="@string/price_txt"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_quantity"
            app:layout_constraintStart_toEndOf="@+id/tv_quantity"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_quantity" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/cairo"
            android:text="22 ريال "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_price_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/tv_price_txt"
            app:layout_constraintTop_toTopOf="@id/tv_price_txt"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_options_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha=".5"
            android:fontFamily="@font/cairo"
            android:text="@string/options"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_quantity_txt"
            app:layout_constraintTop_toBottomOf="@id/tv_quantity_txt" />

        <TextView
            android:id="@+id/tv_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:alpha=".5"
            android:fontFamily="@font/cairo"
            android:text="@string/not_found"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_options_txt"
            app:layout_constraintStart_toEndOf="@id/tv_options_txt"
            app:layout_constraintTop_toTopOf="@id/tv_options_txt" />

        <TextView
            android:id="@+id/tv_notes_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha=".5"
            android:fontFamily="@font/cairo"
            android:text="@string/notes"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_quantity_txt"
            app:layout_constraintTop_toBottomOf="@id/tv_options_txt" />

        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:alpha=".5"
            android:fontFamily="@font/cairo"
            android:text="@string/not_found"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_notes_txt"
            app:layout_constraintStart_toEndOf="@id/tv_notes_txt"
            app:layout_constraintTop_toTopOf="@id/tv_notes_txt" />

        <TextView
            android:id="@+id/tv_additions_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha=".5"
            android:fontFamily="@font/cairo"
            android:text="@string/additions"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_notes_txt"
            app:layout_constraintTop_toBottomOf="@id/tv_notes_txt" />

        <TextView
            android:id="@+id/tv_additions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:alpha=".5"
            android:fontFamily="@font/cairo"
            android:text="@string/not_found"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_additions_txt"
            app:layout_constraintStart_toEndOf="@id/tv_additions_txt"
            app:layout_constraintTop_toTopOf="@id/tv_additions_txt" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_additions" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>